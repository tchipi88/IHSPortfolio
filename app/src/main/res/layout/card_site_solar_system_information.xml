<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardViewStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:padding="8dp">


        <TextView
            android:id="@+id/header_site_solar_system"
            style="@style/TextCardViewHeaderExpand"
            android:text="@string/site_solar_system" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/section_site_solar_system"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            tools:visibility="visible"
            android:visibility="gone">

            <TextView
                android:id="@+id/solarSystemTechnology_txt"
                style="@style/TextCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/solarSystemTechnology"
                android:text="@string/Technology" />

            <TextView
                android:id="@+id/solarSystemTechnology"
                style="@style/TextCardView"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toEndOf="@id/solarSystemTechnology_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/solarSystemTechnology_txt"
                tools:text="LIT_229" />



            <TextView
                android:id="@+id/solarSystemTypeRegulateur_txt"
                style="@style/TextCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/solarSystemTechnology_txt"
                app:layout_constraintEnd_toStartOf="@id/solarSystemTypeRegulateur"
                android:text="@string/solarSystemTypeRegulateur" />

            <TextView
                android:id="@+id/solarSystemTypeRegulateur"
                style="@style/TextCardView"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toEndOf="@id/solarSystemTypeRegulateur_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/solarSystemTypeRegulateur_txt"
                tools:text="LIT_229" />


            <TextView
                android:id="@+id/solarSystemQuantityOfModules_txt"
                style="@style/TextCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/solarSystemTypeRegulateur_txt"
                app:layout_constraintEnd_toStartOf="@id/solarSystemQuantityOfModules"
                android:text="@string/solarSystemQuantityOfModules" />

            <TextView
                android:id="@+id/solarSystemQuantityOfModules"
                style="@style/TextCardView"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toEndOf="@id/solarSystemQuantityOfModules_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/solarSystemQuantityOfModules_txt"
                tools:text="LIT_229" />


            <TextView
                android:id="@+id/solarSystemQuantityOfPanels1_txt"
                style="@style/TextCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/solarSystemQuantityOfModules_txt"
                app:layout_constraintEnd_toStartOf="@id/solarSystemQuantityOfPanels1"
                android:text="@string/solarSystemQuantityOfPanels1" />

            <TextView
                android:id="@+id/solarSystemQuantityOfPanels1"
                style="@style/TextCardView"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toEndOf="@id/solarSystemQuantityOfPanels1_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/solarSystemQuantityOfPanels1_txt"
                tools:text="LIT_229" />


            <TextView
                android:id="@+id/solarSystemQuantityOfPanels2_txt"
                style="@style/TextCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/solarSystemQuantityOfPanels1_txt"
                app:layout_constraintEnd_toStartOf="@id/solarSystemQuantityOfPanels2"
                android:text="@string/solarSystemQuantityOfPanels2" />

            <TextView
                android:id="@+id/solarSystemQuantityOfPanels2"
                style="@style/TextCardView"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toEndOf="@id/solarSystemQuantityOfPanels2_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/solarSystemQuantityOfPanels2_txt"
                tools:text="LIT_229" />



            <TextView
                android:id="@+id/solarSystemCaracteristic1_txt"
                style="@style/TextCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/solarSystemQuantityOfPanels2_txt"
                app:layout_constraintEnd_toStartOf="@id/solarSystemCaracteristic1"
                android:text="@string/solarSystemCaracteristic1" />

            <TextView
                android:id="@+id/solarSystemCaracteristic1"
                style="@style/TextCardView"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toEndOf="@id/solarSystemCaracteristic1_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/solarSystemCaracteristic1_txt"
                tools:text="LIT_229" />



            <TextView
                android:id="@+id/solarSystemCaracteristic2_txt"
                style="@style/TextCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/solarSystemCaracteristic1_txt"
                app:layout_constraintEnd_toStartOf="@id/solarSystemCaracteristic2"
                android:text="@string/solarSystemCaracteristic2" />

            <TextView
                android:id="@+id/solarSystemCaracteristic2"
                style="@style/TextCardView"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toEndOf="@id/solarSystemCaracteristic2_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/solarSystemCaracteristic2_txt"
                tools:text="LIT_229" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>