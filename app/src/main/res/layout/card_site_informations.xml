<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardViewStyle">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/section_site_informations"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:padding="8dp"
            >

            <TextView
                android:id="@+id/name"
                style="@style/TextCardViewBold"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_width="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Dizangue" />




            <TextView
                android:id="@+id/ihsId_txt"
                style="@style/TextCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintEnd_toStartOf="@id/ihsId"
                android:text="IHS ID" />

            <TextView
                android:id="@+id/ihsId"
                style="@style/TextCardView"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toEndOf="@id/ihsId_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ihsId_txt"
                tools:text="LIT_229" />

            <TextView
                android:id="@+id/operatorId_txt"
                style="@style/TextCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ihsId"
                app:layout_constraintEnd_toStartOf="@id/operatorId"
                android:text="@string/site_operator_id" />

            <TextView
                android:id="@+id/operatorId"
                style="@style/TextCardView"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toEndOf="@id/operatorId_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/operatorId_txt"
                tools:text="IHS_EDA_004" />



            <TextView
                android:id="@+id/region_txt"
                style="@style/TextCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/operatorId_txt"
                app:layout_constraintEnd_toStartOf="@id/region"
                android:text="@string/site_region" />

            <TextView
                android:id="@+id/region"
                style="@style/TextCardView"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toEndOf="@id/region_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/region_txt"
                tools:text="Loreeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeem" />


            <TextView
                android:id="@+id/configuration_txt"
                style="@style/TextCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/region_txt"
                app:layout_constraintEnd_toStartOf="@id/configuration"
                android:text="@string/site_configuration" />

            <TextView
                android:id="@+id/configuration"
                style="@style/TextCardView"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toEndOf="@id/configuration_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/configuration_txt"
                tools:text="Loreeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeem" />


            <TextView
                android:id="@+id/type_txt"
                style="@style/TextCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/configuration_txt"
                app:layout_constraintEnd_toStartOf="@id/type"
                android:text="@string/site_type" />

            <TextView
                android:id="@+id/type"
                style="@style/TextCardView"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toEndOf="@id/type_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/type_txt"
                tools:text="Loreeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeem" />


            <TextView
                android:id="@+id/topology_txt"
                style="@style/TextCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/type_txt"
                app:layout_constraintEnd_toStartOf="@id/topology"
                android:text="@string/site_topology" />

            <TextView
                android:id="@+id/topology"
                style="@style/TextCardView"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toEndOf="@id/topology_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/topology_txt"
                tools:text="Loreeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeem" />


            <TextView
                android:id="@+id/cluster_txt"
                style="@style/TextCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topology_txt"
                app:layout_constraintEnd_toStartOf="@id/cluster"
                android:text="@string/cluster" />

            <TextView
                android:id="@+id/cluster"
                style="@style/TextCardView"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8dp"
                app:layout_constraintStart_toEndOf="@id/cluster_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cluster_txt"
                tools:text="Loreeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeem" />
        </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>