<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <include layout="@layout/form_site_informations" />
        <include layout="@layout/form_site_management" />
        <include layout="@layout/form_site_grid_information" />
        <include layout="@layout/form_site_power_cabinet_information" />
        <include layout="@layout/form_site_generator_information" />
        <include layout="@layout/form_site_fuel_tank_information" />
        <include layout="@layout/form_site_solar_system_information" />


        <Button
            android:id="@+id/save"
            style="@style/ButttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>